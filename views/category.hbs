<li class="gravestone"><a class="topic topic-wrapper" href="/{{id}}">RIP</a></li>

<a href="/add" class="add-new">+</a>
<form class="add-new" action="/add" method="post">
  <input type="text" name="title">
  <input hidden name="votes" value="1">
  <input hidden name="cat_id" value="{{id}}">
  <button type="submit">Add</button>
</form>
<div class="gif-vote-container">
  <div class="votes">
    {{#each titles}}
    <div class="title-votes">
      <p class="t">{{title}}</p>
      <p class="v">{{votes}}</p>

      <form action="/vote/{{id}}" method="post">
        <input hidden name="vote" value="{{votes}}">
        <input hidden name="cat_id" value="{{cat_id}}">
        <button type="submit">up vote</button>
      </form>
      </div>
    {{/each}}
  </div>
  <div class="gif">
    <img src="{{gif}}">
  </div>

</div>
